<mvc:View
	controllerName="<%= fioriComponentNamespace %>.view.Detail"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	<Page
		id="detailsPage"
		title="{i18n>DETAIL_TITLE}"
		class="sapUiFioriObjectPage"
		showNavButton="{device>/isPhone}"
		navButtonPress="handleNavButtonPress">

		<ObjectHeader id="header"
			title="{ProductName}"
			number="{UnitsInStock}"
			numberUnit="EA">

			<customData id="customData1">
				<core:CustomData id="coreCustomData1" key="sapDtResourcePath" value="Products"></core:CustomData>
			</customData>

			<attributes id="detailsAttributes">
				<ObjectAttribute id="ATTR" text="ID: {ProductID}" /> <!--{i18n>DETAIL_TEXT}-->
			</attributes>
		</ObjectHeader>

		<IconTabBar
			id="iconTabBar"
			expanded="{device>/isNoPhone}" >
			<customData id="customData2">
				<core:CustomData id="coreCustomData2" key="sapDtResourcePath" value="Products"></core:CustomData>
			</customData>
			<items id="detailsItems">
				<IconTabFilter id="iconTabFilter1"
					key="hint"
					icon="sap-icon://hint">
					<form:SimpleForm
						id="form1"
						layout="ResponsiveGridLayout"
						minWidth="1024" >
						<core:Title id="title1" text="More Details" />
						<Label id="label1" text="Product Name">
							<customData id="customData3">
								<core:CustomData id="coreCustomData3" key="sapDtResourcePath" value="Products"></core:CustomData>
							</customData>
						</Label>

						<Text id="text1" text="{ProductName}" >
							<customData id="customData4">
								<core:CustomData id="coreCustomData4" key="sapDtResourcePath" value="Products"></core:CustomData>
							</customData>
						</Text>

						<Label text="Product Category" />
						<Text text="{Category/CategoryName}" />

						<Label text="Supplier" />
						<Text text="{SupplierID}" />

						<core:ExtensionPoint name="extIconTabFilterForm1"/>

					</form:SimpleForm>
				</IconTabFilter>

				<IconTabFilter id="iconTabFilter2"
					key="display"
					icon="sap-icon://display">
					<form:SimpleForm
						id="form2"
						layout="ResponsiveGridLayout"
						minWidth="1024" >
						<core:Title id="title2" text="More Details" />
						<Label text="Category ID" />
						<Text text="{Category/CategoryID}" />

						<Label text="Category Descr." />
						<Text text="{Category/Description}" />

						<core:ExtensionPoint name="extIconTabFilterForm2"/>

					</form:SimpleForm>
				</IconTabFilter>

				<core:ExtensionPoint name="extIconTabFilter"/>

			</items>
		</IconTabBar>

		<core:ExtensionPoint name="extDetail"/>

		<footer id="detailsFooter">
			<Bar id="bar">
				<contentRight id="detailsContentRight">
					<Button id="actionButton" icon="sap-icon://action" press="openActionSheet"></Button>
				</contentRight>
			</Bar>
		</footer>
	</Page>
</mvc:View>

<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:shellfooter="sap.ushell.ui.footerbar" controllerName="<%= fioriComponentNamespace %>.view.Master">

	<Page id="page" title="{i18n>MASTER_TITLE}">
		<subHeader id="subHeader">
			<Bar id="bar1">
				<contentMiddle id="contentMiddle">
					<SearchField id="searchField" showRefreshButton="{device>/isNoTouch}"
						placeholder="{i18n>MASTER_SEARCH_PLACEHOLDER}" search="handleSearch"
						tooltip="{i18n>MASTER_SEARCH_TOOLTIP}" width="100%">
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>

		<content id="content">

			<!--<List id="list" items="{/Products}" mode="{device>/listMode}"-->
			<!--
			The "items" aggregation can take an odata collection directly or a path specification as shown below.
			Here I am showing how you can expand the Product collection to also show the associated Category,
			selecting all (*) fields from Product, but only the CategoryName from Category.

			This is the upfront method... we could use the just-in-time method to make an explicit call in
			javascript on the press event to get the category info. This method is much simply but it means
			the initial odata download is longer...
			-->

			<List id="list" items="{path: '/Products', parameters: {expand: 'Category', select: '*,Category/CategoryName,Category/Picture,Category/Description,Category/CategoryID'}}" mode="{device>/listMode}"
				select="handleSelect" growing="true" growingScrollToLoad="true">
				<customData id="customData1">
					<core:CustomData id="coreCustomData1" key="sapDtResourcePath" value="Products"></core:CustomData>
				</customData>
				<items id="listItems">
					<ObjectListItem id="mainListItem" type="{device>/listItemType}"
						title="{ProductName}"
						number="{UnitsInStock}"
						numberUnit="EA"
						press="handleSelect">

						<customData id="customData2">
							<core:CustomData id="coreCustomData2" key="sapDtResourcePath" value="Products"></core:CustomData>
						</customData>
						<attributes id="attributes">
							<ObjectAttribute id="ATTR1" text="{ProductID}">
								<customData id="customData3">
									<core:CustomData id="coreCustomData3" key="sapDtResourcePath" value="Products"></core:CustomData>
								</customData>
							</ObjectAttribute>
							<ObjectAttribute id="ATTR2" text="" >
								<customData id="customData4">
									<core:CustomData id="coreCustomData4" key="sapDtResourcePath" value="Products"></core:CustomData>
								</customData>
							</ObjectAttribute>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>

		<footer id="footer">
			<Bar id="bar2">
				<contentLeft id="contentLeft">
					<shellfooter:SettingsButton id="settingsButton"></shellfooter:SettingsButton>
				</contentLeft>
			</Bar>
		</footer>
	</Page>

</mvc:View>
